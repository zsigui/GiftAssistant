<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                    android:centerColor="@color/co_btn_grey"
                    android:endColor="@color/co_btn_grey"
                    android:startColor="@color/co_btn_grey" />
        </shape>
    </item>
    <!-- progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                        android:centerColor="@color/co_btn_green"
                        android:endColor="@color/co_btn_green"
                        android:startColor="@color/co_btn_green" />
            </shape>
        </clip>
    </item>
    <!-- second progress -->

    <item android:id="@android:id/secondaryProgress">
        <color android:color = "@android:color/transparent" />
    </item>
</layer-list>