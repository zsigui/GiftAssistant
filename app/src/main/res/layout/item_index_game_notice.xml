<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/IndexListItemLayout"
                android:id="@+id/rl_recommend"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/di_index_hoz_module_margin_left">

	<ImageView
			android:id="@+id/iv_tag"
			android:layout_width = "wrap_content"
			android:layout_height = "@dimen/di_game_icon_layout_diameter"
			android:scaleType="centerInside"
			android:src = "@drawable/ic_tag_first"/>

	<RelativeLayout
			android:id="@+id/rl_icon"
			android:layout_width="@dimen/di_game_icon_layout_diameter"
			android:layout_height="@dimen/di_game_icon_layout_diameter"
			android:layout_toRightOf="@id/iv_tag"
			android:layout_marginLeft="8dp"
			android:background="@color/co_transparent">

		<com.makeramen.roundedimageview.RoundedImageView
				android:id="@+id/iv_icon"
				style="@style/DefaultImageView.Icon"
				app:riv_border_color="@color/co_stroke_bg"
				app:riv_border_width="@dimen/di_common_icon_border_size"
				app:riv_corner_radius="@dimen/di_common_icon_diameter_radius"
				android:layout_margin = "@dimen/di_game_icon_margin"
				app:riv_oval="false"/>

		<ImageView
				android:id = "@+id/iv_gift"
				android:layout_alignParentRight = "true"
				android:contentDescription="@null"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:src = "@drawable/ic_gift" />
	</RelativeLayout>

	<TextView
			android:id="@+id/tv_name"
			style="@style/DefaultTextView.Header"
			android:layout_width="match_parent"
			android:layout_alignTop="@+id/rl_icon"
			android:layout_marginLeft="@dimen/di_index_item_margin_left"
			android:layout_marginTop="4dp"
			android:layout_toLeftOf="@+id/ll_send"
			android:layout_toRightOf="@+id/rl_icon"
			android:gravity="center_vertical"
			android:text="暴打魏蜀吴"/>

	<TextView
			android:id="@+id/tv_play"
			style="@style/DefaultTextView.Text.Note"
			android:layout_width="60dp"
			android:layout_below="@+id/tv_name"
			android:layout_marginLeft="@dimen/di_index_item_margin_left"
			android:layout_marginTop="12dp"
			android:layout_toRightOf="@+id/rl_icon"
			android:gravity="center_vertical"
			android:text="3.4万人在玩"/>

	<TextView
			android:id="@+id/tv_size"
			style="@style/DefaultTextView.Text.Note"
			android:layout_width="match_parent"
			android:layout_marginLeft="@dimen/di_index_item_margin_left"
			android:layout_alignTop="@+id/tv_play"
			android:layout_toLeftOf="@+id/ll_send"
			android:layout_toRightOf="@+id/tv_play"
			android:gravity="center_vertical"
			android:text="128.5M"/>

	<TextView
			android:id="@+id/tv_gift"
			style="@style/DefaultTextView.Text"
			android:gravity="left"
			android:layout_below="@+id/tv_play"
			android:layout_marginLeft="7dp"
			android:layout_marginTop="6dp"
			android:layout_toRightOf="@+id/rl_icon"
			android:text="至尊礼包 等共12款礼包"/>



	<LinearLayout
			android:id="@+id/ll_send"
			android:layout_width="wrap_content"
			android:layout_height="70dp"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="@dimen/di_index_hoz_module_margin_left"
			android:background="@color/co_transparent"
			android:gravity="center">

		<TextView
				android:id = "@+id/tv_download"
				style = "@style/ButtonText"
				android:text = "下载"
				android:background = "@drawable/selector_btn_green" />
	</LinearLayout>
</RelativeLayout>