<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id = "@+id/rl_like"
        style = "@style/IndexListItemLayout"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app = "http://schemas.android.com/apk/res-auto"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:background = "@drawable/selector_white_module"
        android:paddingTop = "@dimen/di_list_item_gap_small"
        tools:ignore = "RtlHardcoded, RtlSymmetry" >

    <RelativeLayout
            android:id = "@+id/rl_icon"
            android:layout_width = "74dp"
            android:layout_height = "wrap_content"
            android:background = "@color/co_transparent" >

        <com.makeramen.roundedimageview.RoundedImageView
                android:id = "@+id/iv_icon"
                style = "@style/DefaultImageView.Icon"
                app:riv_border_color = "@color/co_stroke_bg"
                app:riv_border_width = "@dimen/di_icon_border_size"
                app:riv_corner_radius = "@dimen/di_list_item_gap_b_normal"
                android:layout_marginTop = "@dimen/di_line_space_extra_big"
                android:src = "@color/co_btn_orange"
                app:riv_oval = "false" />

        <ImageView
                android:id = "@+id/iv_hint"
                style = "@style/DefaultImageView"
                android:src = "@drawable/ic_index_gift_like_new"
                android:layout_alignParentTop = "true"
                android:layout_alignParentRight = "true"
                android:visibility = "gone"
                tools:visibility = "visible"
                android:contentDescription = "@null" />

    </RelativeLayout >


    <TextView
            android:id = "@+id/tv_name"
            style = "@style/DefaultTextView.Header"
            android:layout_width = "match_parent"
            android:layout_alignTop = "@+id/rl_icon"
            android:layout_marginLeft = "3dp"
            android:layout_marginTop = "@dimen/di_list_item_gap_small"
            android:layout_toRightOf = "@+id/rl_icon"
            android:layout_toLeftOf = "@+id/ll_send"
            android:gravity = "center_vertical"
            tools:text = "暴打魏蜀吴" />

    <TextView
            android:id = "@+id/tv_count"
            style = "@style/DefaultTextView.Text.Note"
            android:layout_width = "wrap_content"
            android:layout_below = "@+id/tv_name"
            android:layout_marginTop = "@dimen/di_list_item_gap_very_small"
            android:layout_toRightOf = "@+id/rl_icon"
            android:layout_alignLeft = "@+id/tv_name"
            android:gravity = "center_vertical"
            android:textSize = "@dimen/di_text_size_small"
            tools:text = "32款礼包" />

    <TextView
            android:id = "@+id/tv_size"
            style = "@style/DefaultTextView.Text.Note"
            android:layout_width = "match_parent"
            android:layout_marginLeft = "@dimen/di_index_item_margin_left"
            android:layout_alignTop = "@+id/tv_count"
            android:layout_toRightOf = "@+id/tv_count"
            android:layout_toLeftOf = "@+id/ll_send"
            android:gravity = "center_vertical"
            android:textSize = "@dimen/di_text_size_small"
            tools:text = "128.5M" />

    <!--<TextView-->
    <!--android:id = "@+id/tv_count"-->
    <!--style = "@style/DefaultTextView.Text"-->
    <!--android:layout_width = "70dp"-->
    <!--android:gravity = "left"-->
    <!--android:layout_below = "@+id/tv_content"-->
    <!--android:layout_marginLeft = "7dp"-->
    <!--android:layout_marginTop = "5dp"-->
    <!--android:layout_toRightOf = "@+id/rl_icon"-->
    <!--tools:text = "共12款礼包" />-->

    <TextView
            android:id = "@+id/tv_new_add"
            style = "@style/DefaultTextView.Text"
            android:gravity = "left"
            android:layout_below = "@+id/tv_count"
            android:layout_marginTop = "@dimen/di_list_item_gap_very_small"
            android:layout_toRightOf = "@+id/rl_icon"
            android:textColor = "@color/co_btn_orange"
            android:drawablePadding = "@dimen/di_line_space_extra_big"
            android:layout_alignLeft = "@+id/tv_name"
            tools:drawableLeft = "@drawable/ic_task_new"
            tools:text = "程咬金三天体验卡" />


    <LinearLayout
            android:id = "@+id/ll_send"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentRight = "true"
            android:background = "@color/co_transparent"
            android:layout_alignTop = "@+id/tv_name"
            android:paddingLeft = "@dimen/di_list_item_gap_very_small"
            android:gravity = "center" >

        <TextView
                android:id = "@+id/btn_checkout"
                style = "@style/DefaultTextView"
                android:layout_height = "@dimen/di_btn_height"
                android:background = "@drawable/selector_btn_red"
                android:text = "@string/st_btn_checkout"
                android:textColor = "@color/color_btn_red_border" />
    </LinearLayout >
</RelativeLayout >