<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:paddingTop = "@dimen/di_login_padding_top"
              android:background = "@color/co_common_content_bg"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent" >

    <TextView
            android:id = "@+id/tv_top_hint"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:paddingRight = "@dimen/di_login_padding_left_right"
            android:paddingLeft = "@dimen/di_login_padding_left_right"
            android:paddingBottom = "24dp"
            android:singleLine = "false"
            android:lineSpacingExtra = "@dimen/di_line_space_extra_normal"
            android:textColor = "@color/co_common_text_second"
            android:text = "@string/st_lbind_choose_top_hint" />

    <ListView
            android:id = "@+id/lv_user_list"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:divider = "@color/co_divider_bg"
            android:dividerHeight = "@dimen/di_divider_height" />

    <TextView
            android:id = "@+id/btn_send"
            android:layout_marginLeft = "@dimen/di_login_padding_gap"
            android:layout_marginRight = "@dimen/di_login_padding_gap"
            android:layout_marginTop = "15dp"
            style = "@style/DefaultTextView.BiggerBtn"
            android:background = "@drawable/selector_btn_bigger_red"
            android:layout_width = "match_parent"
            android:text = "@string/st_login_btn_text" />


</LinearLayout >