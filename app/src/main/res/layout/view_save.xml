<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:id = "@+id/ll_save"
        android:layout_width = "match_parent"
        android:layout_height = "?actionBarSize"
        android:orientation = "horizontal"
        android:gravity = "right|center_vertical" >

    <ImageView
            android:id = "@+id/iv_bar_share"
            android:layout_width = "?actionBarSize"
            android:layout_height = "?actionBarSize"
            android:background = "?actionBarItemBackground"
            android:scaleType = "centerInside"
            android:visibility = "gone"
            android:layout_gravity = "right"
            android:src = "@drawable/ic_toolbar_share" />

    <TextView
            android:id = "@+id/btn_bar_right"
            style = "@style/DefaultTextView.NormalBtn"
            android:layout_marginLeft = "5dp"
            android:layout_marginRight = "10dp"
            android:text = "@string/st_user_set_nick_save"
            android:background = "@drawable/selector_btn_orange" />
</LinearLayout >