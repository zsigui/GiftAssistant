<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_recommend"
    style="@style/IndexListItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/co_transparent"
    android:paddingLeft="@dimen/di_index_hoz_module_margin_left"
    android:paddingRight="@dimen/di_index_hoz_module_margin_left">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_icon"
        style="@style/DefaultImageView.Icon"
        app:riv_border_color="@color/co_stroke_bg"
        app:riv_border_width="@dimen/di_common_icon_border_size"
        app:riv_corner_radius="@dimen/di_common_icon_diameter_radius"
        app:riv_oval="false"/>

    <ImageView
        android:id="@+id/iv_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/di_index_item_margin_left"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_icon"
        android:src="@drawable/ic_score"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/DefaultTextView.Header"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/iv_limit"
        android:paddingLeft="4dp"
        android:text="[暴打魏蜀吴]新手礼包"/>

    <TextView
        android:id="@+id/tv_content"
        style="@style/DefaultTextView.Text"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/di_index_item_margin_left"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:gravity="center_vertical"
        android:text="30钻石，5000金币，武器经验卡x6，100块神魂石，10000颗迷魂珠"/>

    <TextView
        android:id="@+id/tv_deadline"
        style="@style/DefaultTextView.Text"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="@dimen/di_index_item_margin_left"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="有效期：2015.10.30 10:00 ~ 2016.10.30 10:00"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_icon"
        android:layout_below="@+id/iv_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_gift_code"
            style="@style/DefaultTextView.Text"
            android:layout_height="33dp"
            android:layout_width="244dp"
            android:layout_marginRight="10dp"
            android:background="@color/co_gift_code_bg"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="礼包码：123456789KKKKKKKK"/>

        <TextView
            android:id="@+id/btn_copy"
            style="@style/DefaultTextView"
            android:layout_height="@dimen/di_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_red"
            android:text="复制"
            android:textColor="@color/co_white"/>
    </RelativeLayout>
</RelativeLayout>