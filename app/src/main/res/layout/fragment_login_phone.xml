<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:paddingTop = "@dimen/di_login_padding_top"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent" >

	<LinearLayout
			android:id = "@+id/ll_input"
			android:orientation = "horizontal"
			style = "@style/IndexModuleTitleLayout.Bigger.LoginInput" >

		<AutoCompleteTextView
				android:id = "@+id/et_input"
				style = "@style/DefaultTextView.Login"
				android:cursorVisible="true"
				android:imeOptions="actionNext"
				android:hint = "@string/st_login_phone_hint" />

		<TextView
				android:id = "@+id/tv_clear"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:clickable = "true"
				android:layout_marginRight = "5dp"
				android:visibility = "gone"
				android:background = "@drawable/ic_input_clear" />
	</LinearLayout >

	<View style = "@style/HDividerView" />

	<LinearLayout
			android:id = "@+id/ll_code"
			android:orientation = "horizontal"
			style = "@style/IndexModuleTitleLayout.Bigger.LoginInput" >

		<EditText
				android:id = "@+id/et_phone_code"
				style = "@style/DefaultTextView.Login"
				android:cursorVisible="true"
				android:inputType="number"
				android:imeOptions="actionNext"
				android:hint = "@string/st_login_phone_code_hint" />

		<View style = "@style/VDividerView" />

		<TextView
				android:id = "@+id/tv_send_code"
				style = "@style/DefaultTextView.LoginPoint"
				android:layout_marginLeft = "10dp"
				android:layout_height = "match_parent"
				android:textColor = "@color/co_btn_green"
				android:text = "@string/st_login_phone_send_code" />
	</LinearLayout >

