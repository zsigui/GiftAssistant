<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:id = "@+id/rl_hot_all"
		style = "@style/IndexModuleTitleLayout"
		android:background="@color/co_white"
		android:clickable = "true" >

	<TextView
			android:id="@+id/tv_light"
			style = "@style/DefaultTextView.Header"
			android:layout_width="@dimen/di_title_light_width"
			android:layout_marginRight="@dimen/di_title_light_padding"
			android:background="@color/co_common_app_main_bg"/>
	<TextView
			android:id="@+id/tv_title"
			android:layout_toRightOf="@id/tv_light"
			style = "@style/DefaultTextView.Header" />

	<TextView style = "@style/DefaultTextView.More" />

</RelativeLayout >