<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "horizontal"
              android:layout_width = "match_parent"
              android:layout_height = "66dp"
              android:background = "@color/co_white"
              android:gravity="center_vertical"
              android:paddingRight = "@dimen/di_index_hoz_module_icon_gap"
              android:paddingLeft = "@dimen/di_index_hoz_module_margin_left" >

	<LinearLayout
			android:orientation = "vertical"
			android:layout_width = "0dp"
			android:layout_weight="1"
			android:layout_height = "wrap_content" >

		<TextView
				android:id = "@+id/tv_name"
				style = "@style/DefaultTextView.Header"
				android:paddingBottom="5dp"
				android:text = "活动赠送" />

		<TextView
				style = "@style/DefaultTextView.Text.Note"
				android:id = "@+id/tv_time"
				android:text = "2015.12.28 20:22" />
	</LinearLayout >
	<TextView
			style="@style/DefaultTextView.Header"
			android:text="+10"
			android:paddingRight="10dp"
			android:textColor="@color/co_get_green"/>
</LinearLayout >