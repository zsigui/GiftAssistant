<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_anchors"
        android:layout_width="match_parent"
        android:layout_height="@dimen/di_tab_index_bg_height"
        android:background="@color/co_tab_index_bg"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/tv_before"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="更早"
            android:textColor="@color/color_tab_server_info_two"/>

        <CheckedTextView
            android:id="@+id/tv_yesterday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="昨天"
            android:textColor="@color/color_tab_server_info_one"/>

        <CheckedTextView
            android:id="@+id/tv_today"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今天"
            android:textColor="@color/color_tab_server_info_one"/>

        <CheckedTextView
            android:id="@+id/tv_tomorrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="明天"
            android:textColor="@color/color_tab_server_info_one"/>

        <CheckedTextView
            android:id="@+id/tv_after"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="以后"
            android:textColor="@color/color_tab_server_info_two"/>
    </LinearLayout>
</LinearLayout>