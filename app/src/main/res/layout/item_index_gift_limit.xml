<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		android:id = "@+id/rl_recommend"
		style = "@style/IndexListItemLayout.Horizontal"
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:app = "http://schemas.android.com/apk/res-auto" >

	<!-- 此ImageView需要自定义实现 -->
	<RelativeLayout
			android:id = "@+id/rl_icon"
			android:layout_width = "@dimen/di_icon_diameter"
			android:layout_height = "@dimen/di_icon_diameter"
			android:layout_centerHorizontal = "true"
			android:background = "@color/co_transparent" >

		<com.makeramen.roundedimageview.RoundedImageView
				android:id = "@+id/iv_icon"
				android:layout_width = "match_parent"
				android:layout_height = "match_parent"
				android:scaleType = "centerCrop"
				app:riv_border_color = "@color/co_stroke_bg"
				app:riv_border_width = "@dimen/di_icon_border_size"
				app:riv_corner_radius = "@dimen/di_icon_radius"
				app:riv_oval = "false" />

		<ImageView
				android:id = "@+id/iv_limit"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_alignParentBottom = "true"
				android:layout_alignParentRight = "true"
				android:layout_marginRight = "@dimen/di_icon_border_size"
				android:layout_marginBottom = "@dimen/di_icon_border_size"
				android:contentDescription = "@null"
				android:src = "@drawable/ic_tag_limit" />
	</RelativeLayout >

	<TextView
			android:id = "@+id/tv_game_name"
			style = "@style/DefaultTextView.ItemTitle"
			android:layout_below = "@+id/rl_icon" />

	<TextView
			android:id = "@+id/tv_name"
			style = "@style/DefaultTextView.ItemSubTitle"
			android:text = "VIP礼包"
			android:layout_below = "@+id/tv_game_name" />

	<LinearLayout
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal"
			android:layout_centerHorizontal = "true"
			android:layout_below = "@+id/tv_name"
			android:paddingLeft = "4dp"
			android:paddingRight = "4dp"
			android:layout_marginBottom = "14dp"
			android:gravity = "center" >

		<ProgressBar
				android:id = "@+id/pb_percent"
				style = "?android:attr/progressBarStyleHorizontal"
				android:layout_width = "0dp"
				android:layout_weight = "1"
				android:layout_height = "@dimen/di_gift_common_pb_diameter"
				android:max = "100"
				android:layout_marginRight = "3dp"
				android:progressDrawable = "@drawable/shape_progress_bar_orange" />

		<TextView
				android:id = "@+id/tv_percent"
				style = "@style/DefaultTextView.Text"
				android:text = "100%" />
	</LinearLayout >

</RelativeLayout >