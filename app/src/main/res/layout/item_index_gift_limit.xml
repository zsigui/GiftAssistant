<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id = "@+id/rl_recommend"
        style = "@style/IndexListItemLayout.Horizontal"
        android:paddingLeft = "0dp"
        android:paddingRight = "0dp"
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app = "http://schemas.android.com/apk/res-auto" >

    <!-- 此ImageView需要自定义实现 -->
    <RelativeLayout
            android:id = "@+id/rl_icon"
            android:layout_width = "@dimen/di_icon_diameter"
            android:layout_height = "@dimen/di_icon_diameter"
            android:layout_centerHorizontal = "true"
            android:background = "@color/co_transparent" >

        <com.makeramen.roundedimageview.RoundedImageView
                android:id = "@+id/iv_icon"
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:scaleType = "centerCrop"
                app:riv_border_color = "@color/co_stroke_bg"
                app:riv_border_width = "@dimen/di_icon_border_size"
                app:riv_corner_radius = "@dimen/di_icon_radius"
                app:riv_oval = "false" />

        <!--<ImageView-->
        <!--android:id = "@+id/iv_limit"-->
        <!--android:layout_width = "wrap_content"-->
        <!--android:layout_height = "wrap_content"-->
        <!--android:layout_alignParentBottom = "true"-->
        <!--android:layout_alignParentRight = "true"-->
        <!--android:layout_marginRight = "@dimen/di_icon_border_size"-->
        <!--android:layout_marginBottom = "@dimen/di_icon_border_size"-->
        <!--android:contentDescription = "@null"-->
        <!--android:src = "@drawable/ic_tag_limit" />-->
    </RelativeLayout >

    <TextView
            android:id = "@+id/tv_game_name"
            style = "@style/DefaultTextView.ItemTitle"
            android:layout_width = "@dimen/di_icon_diameter"
            android:layout_below = "@+id/rl_icon" />

    <TextView
            android:id = "@+id/tv_name"
            style = "@style/DefaultTextView.ItemSubTitle"
            android:layout_width = "@dimen/di_icon_diameter"
            android:layout_marginBottom = "2dp"
            android:layout_below = "@+id/tv_game_name" />

    <FrameLayout
            android:id="@+id/fl_price"
            android:layout_width = "60dp"
            android:layout_height = "wrap_content"
            android:layout_centerHorizontal = "true"
            android:layout_marginLeft = "@dimen/di_list_item_gap_very_small"
            android:layout_marginRight = "@dimen/di_list_item_gap_very_small"
            android:layout_below = "@+id/tv_name" >

        <TextView
                android:id = "@+id/tv_price"
                style = "@style/DefaultTextView.ItemSubTitle"
                android:padding = "0dp"
                android:layout_gravity = "center_horizontal"
                android:layout_marginTop = "0dp" />

        <View
                android:id = "@+id/v_delete"
                android:layout_width = "wrap_content"
                android:layout_height = "@dimen/di_divider_height"
                android:layout_gravity = "center"
                android:layout_marginBottom = "2dp"
                android:background = "@color/co_btn_grey_pressed" />
    </FrameLayout >
</RelativeLayout >