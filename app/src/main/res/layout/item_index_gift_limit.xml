<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item"
    style="@style/IndexListItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 此ImageView需要自定义实现 -->
    <RelativeLayout
        android:id="@+id/rl_icon"
        style="@style/IndexIconLayout">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_icon"
            style="@style/DefaultImageView.Icon"
            android:src="@drawable/test"
            app:riv_border_color="@color/co_stroke_bg"
            app:riv_border_width="1dip"
            app:riv_corner_radius="15dp"
            app:riv_oval="false"/>

        <TextView
            style="@style/DefaultTextView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/shape_rect_icon_tap"
            android:text="1款礼包"
            android:textColor="@color/co_white"
            android:textSize="10sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_game_name"
        style="@style/DefaultTextView.Header"
        android:layout_below="@+id/rl_icon"
        android:layout_marginTop="10dp"
        android:text="刀塔传奇"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/DefaultTextView.Header"
        android:layout_below="@+id/tv_game_name"
        android:layout_marginTop="1dp"
        android:text="VIP礼包"
        android:textColor="@color/co_index_module_icon_gift_bg"/>

    <TextView
        android:id="@+id/tv_remain_text"
        style="@style/DefaultTextView.Text"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="8dp"
        android:text="剩余"/>

    <TextView
        android:id="@+id/tv_remain"
        style="@style/DefaultTextView.Text"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/tv_remain_text"
        android:background="@drawable/shape_rect_remain_bg"
        android:text="123"
        android:textColor="@color/co_white"/>

</RelativeLayout>