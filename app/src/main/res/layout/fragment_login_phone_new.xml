    <TextView
            android:id = "@+id/btn_send"
            android:layout_marginLeft = "@dimen/di_login_padding_gap"
            android:layout_marginRight = "@dimen/di_login_padding_gap"
            android:layout_marginTop = "15dp"
            style = "@style/DefaultTextView.BiggerBtn"
            android:background = "@drawable/selector_btn_bigger_red"
            android:layout_width = "match_parent"
            android:text = "@string/st_login_btn_text" />

    <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:paddingRight = "@dimen/di_login_padding_left_right"
            android:paddingTop = "@dimen/di_login_padding_gap" >

        <TextView
                style = "@style/DefaultTextView.Text"
                android:textSize = "12sp"
                android:gravity = "right"
                android:layout_weight = "1"
                android:layout_width = "0dp"
                android:text = "@string/st_login_has_ouwan_a" />

        <TextView
                android:id = "@+id/tv_another_login"
                style = "@style/DefaultTextView.LoginPoint"
                android:textSize = "12sp"
                android:clickable = "true"
                android:text = "@string/st_login_has_ouwan_b" />
    </LinearLayout >


    <LinearLayout
            android:id = "@+id/ll_voice_code"
            android:orientation = "vertical"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:paddingTop = "60dp"
            android:gravity = "center_horizontal" >

        <TextView
                android:id="@+id/tv_voice_hint"
                style = "@style/DefaultTextView.Text"
                android:textSize = "12sp"
                android:layout_marginBottom = "@dimen/di_line_space_extra_big"
                android:text = "@string/st_login_voice_phone_code_try" />

        <TextView
                android:id = "@+id/tv_voice_code"
                style = "@style/DefaultTextView.LoginPoint"
                android:clickable = "true"
                android:text = "@string/st_login_voice_code" />
    </LinearLayout >

</LinearLayout >