<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:background = "@drawable/shape_rect_post_detail_vote_content" >

    <CheckedTextView
            android:id = "@+id/tv_title"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:textColor = "@color/co_common_text_main"
            android:lineSpacingExtra = "@dimen/di_line_space_extra_big"
            android:drawableLeft = "@drawable/selector_item_circle_check"
            android:drawablePadding = "@dimen/di_list_item_gap_small"
            android:gravity = "center_vertical"
            android:textIsSelectable = "true"
            android:focusable="false"
            android:paddingLeft = "@dimen/di_list_item_gap_big"
            android:paddingRight = "@dimen/di_list_item_gap_big"
            android:paddingTop = "@dimen/di_list_item_gap_normal"
            android:paddingBottom = "@dimen/di_list_item_gap_normal"
            tools:text = "鹿力大仙" />
</LinearLayout >