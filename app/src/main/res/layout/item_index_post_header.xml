<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "horizontal"
              android:layout_width = "match_parent"
              android:layout_height = "wrap_content"
              android:paddingBottom = "@dimen/di_list_item_gap_small"
              android:paddingTop = "@dimen/di_list_item_gap_small"
              android:paddingLeft = "@dimen/di_list_item_gap_normal"
              android:paddingRight = "@dimen/di_list_item_gap_normal"
              android:layout_gravity = "center_horizontal"
              android:background = "@color/co_white" >

	<ImageView
			android:id = "@+id/iv_sign_in_everyday"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:clickable = "true"
			android:scaleType="fitXY"
			android:src = "@drawable/pic_sign_in_everyday"
			android:contentDescription = "@null" />

	<ImageView
			android:id = "@+id/iv_lottery_everyday"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:src = "@drawable/pic_lottery_everyday"
			android:scaleType="fitXY"
			android:clickable = "true"
			android:contentDescription = "@null" />

	<ImageView
			android:id = "@+id/iv_task_everyday"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:src = "@drawable/pic_task_everyday"
			android:scaleType="fitXY"
			android:clickable = "true"
			android:contentDescription = "@null" />
</LinearLayout >