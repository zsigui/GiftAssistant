<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                style = "@style/IndexListItemLayout"
                android:paddingRight = "@dimen/di_index_hoz_module_margin_left"
                android:background = "@color/co_white"
                android:layout_width = "match_parent" >

	<RelativeLayout
			android:id = "@+id/rl_icon"
			android:layout_height = "70dp"
			android:layout_width = "70dp"
			android:background = "@color/co_transparent" >

		<ImageView
				android:src = "@drawable/shape_rect_icon"
				android:id = "@+id/iv_icon"
				android:contentDescription = "@null"
				android:layout_centerHorizontal = "true"
				android:scaleType = "matrix"
				android:background = "@drawable/test"
				android:layout_width = "match_parent"
				android:layout_height = "match_parent" />
	</RelativeLayout >

	<ImageView
			android:id="@+id/iv_limit"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:contentDescription="@null"
			android:layout_alignTop="@+id/rl_icon"
			android:layout_marginLeft = "@dimen/di_index_item_margin_left"
			android:layout_marginTop = "10dp"
			android:visibility="gone"
			android:layout_toRightOf="@+id/rl_icon"/>

	<TextView
			android:id = "@+id/tv_title"
			style = "@style/DefaultTextView.Header"
			android:layout_width = "match_parent"
			android:gravity = "center_vertical"
			android:layout_marginLeft = "@dimen/di_index_item_margin_left"
			android:layout_marginTop = "@dimen/di_index_item_margin_left"
			android:text = "[暴打魏蜀吴]新手礼包"
			android:layout_alignTop = "@+id/rl_icon"
			android:layout_toRightOf = "@+id/iv_limit"
			android:layout_toLeftOf = "@+id/ll_send" />

	<TextView
			android:id = "@+id/tv_content"
			style = "@style/DefaultTextView.Text"
			android:layout_width = "match_parent"
			android:gravity = "center_vertical"
			android:layout_marginTop = "8dp"
			android:layout_marginLeft = "@dimen/di_index_item_margin_left"
			android:text = "30钻石，5000金币，武器经验卡x6，100块神魂石，10000颗迷魂珠"
			android:layout_below = "@+id/tv_title"
			android:layout_toRightOf = "@+id/rl_icon"
			android:layout_toLeftOf = "@+id/ll_send" />

	<ImageView
			android:id = "@+id/iv_money"
			android:src = "@drawable/ic_score"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "6dp"
			android:layout_marginTop = "7dp"
			android:layout_below = "@+id/tv_content"
			android:layout_toRightOf = "@+id/rl_icon" />

	<TextView
			android:id = "@+id/tv_money"
			style = "@style/DefaultTextView.Text"
			android:layout_width = "35dp"
			android:gravity = "center_vertical"
			android:layout_marginLeft = "4dp"
			android:text = "100"
			android:layout_marginTop = "6dp"
			android:layout_below = "@+id/tv_content"
			android:layout_toRightOf = "@+id/iv_money" />

	<TextView
			android:id = "@+id/tv_percent"
			style = "@style/DefaultTextView.Text"
			android:layout_marginLeft = "5dp"
			android:text = "剩余100%"
			android:layout_marginTop = "6dp"
			android:layout_below = "@+id/tv_content"
			android:layout_toRightOf = "@+id/tv_money" />

	<ProgressBar
			android:id = "@+id/pb_percent"
			style = "?android:attr/progressBarStyleHorizontal"
			android:layout_width = "72dp"
			android:layout_height = "8dp"
			android:layout_marginLeft = "8dp"
			android:layout_marginTop = "9dp"
			android:max = "100"
			android:progress = "70"
			android:progressDrawable = "@drawable/shape_progress_bar"
			android:layout_below = "@+id/tv_content"
			android:layout_toRightOf = "@+id/tv_percent"
			android:layout_toLeftOf = "@+id/ll_send" />

	<LinearLayout
			android:id = "@+id/ll_send"
			android:layout_width = "wrap_content"
			android:layout_height = "70dp"
			android:layout_marginLeft = "@dimen/di_index_hoz_module_margin_left"
			android:gravity = "center"
			android:background = "@color/co_transparent"
			android:layout_alignParentRight = "true" >

		<TextView
				android:layout_height = "wrap_content"
				android:layout_width = "wrap_content"
				android:textColor = "@color/co_white"
				android:text = "抢号"
				android:background = "@drawable/selector_btn_orange" />
	</LinearLayout >
</RelativeLayout >