<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:orientation = "vertical"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content" >

	<LinearLayout
			android:id = "@+id/ll_bg"
			android:background = "@drawable/shape_rect_btn_70_opacity"
			android:layout_height = "44dp"
			android:layout_width = "wrap_content"
			android:orientation = "horizontal"
			android:layout_alignBottom = "@+id/iv_icon"
			android:paddingRight = "18dp"
			android:paddingLeft = "60dp"
			android:gravity = "center_vertical">

		<TextView
				style = "@style/DefaultTextView.Header"
				android:textColor = "@color/co_reward_bg"
				android:textSize="16sp"
				android:text = "完成 " />

		<TextView
				android:id = "@+id/tv_task"
				style = "@style/DefaultTextView.Header"
				android:textColor = "@color/co_btn_orange"
				android:textSize="16sp"
				android:text = "新版本意见反馈" />

		<TextView
				style = "@style/DefaultTextView.Header"
				android:textColor = "@color/co_reward_bg"
				android:textSize="16sp"
				android:text = " 任务，奖励" />

		<TextView
				android:id = "@+id/tv_score"
				style = "@style/DefaultTextView.Header"
				android:drawableLeft = "@drawable/ic_score"
				android:textColor = "@color/co_btn_orange"
				android:drawablePadding = "2dp"
				android:paddingLeft = "5dp"
				android:textSize="16sp"
				android:text = "10" />
	</LinearLayout >

	<ImageView
			android:id = "@+id/iv_icon"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:contentDescription = "@null"
			android:layout_marginLeft = "12dp"
			android:src = "@drawable/ic_tag_score_reward" />
</RelativeLayout >