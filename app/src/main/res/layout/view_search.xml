<?xml version="1.0" encoding="utf-8"?>
<com.oplay.giftassistant.ui.widget.search.SearchLayout
		android:id = "@+id/sl_search"
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginBottom = "5dp"
		android:layout_marginTop = "5dp"
		android:background = "@drawable/shape_rect_search"
		android:gravity = "center_vertical"
		android:paddingBottom = "6dp"
		android:paddingLeft = "8dp"
		android:paddingRight = "8dp"
		android:paddingTop = "8dp" >


	<TextView
			android:id = "@+id/tv_search_icon"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_alignParentRight = "true"
			android:layout_centerVertical = "true"
			android:layout_marginLeft = "10dp"
			android:contentDescription = "@null"
			android:enabled="false"
			android:background = "@drawable/selector_search_icon" />


	<TextView
			android:id = "@+id/tv_search_divider"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_toLeftOf = "@+id/tv_search_icon"
			android:background = "@drawable/ic_search_divider"
			android:contentDescription = "@null"
			android:visibility = "gone" />


	<TextView
			android:id = "@+id/tv_search_clear"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_toLeftOf = "@+id/tv_search_divider"
			android:layout_marginLeft = "10dp"
			android:layout_marginRight = "10dp"
			android:background = "@drawable/ic_search_cancel"
			android:contentDescription = "@null"
			android:visibility = "gone" />


	<AutoCompleteTextView
			android:id = "@+id/actv_search_input"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_alignParentLeft = "true"
			android:layout_toLeftOf = "@+id/tv_search_clear"
			android:background = "@color/co_transparent"
			android:hint = "@string/st_search_hint"
			android:textColor = "@color/co_common_text_fg"
			android:textColorHint = "@color/co_search_text_hint" />

</com.oplay.giftassistant.ui.widget.search.SearchLayout >