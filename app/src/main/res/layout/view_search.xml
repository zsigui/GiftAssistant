<?xml version="1.0" encoding="utf-8"?>
<com.oplay.giftassistant.ui.widget.SearchLayout
    android:id="@+id/layout_bar_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/shape_rect_search"
    android:gravity="center_vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <AutoCompleteTextView
        android:id="@+id/actv_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/iv_search_icon"
        android:background="@color/co_transparent"
        android:hint="@string/search_hint"
        android:textColor="@color/co_common_text_fg"
        android:textColorHint="@color/co_search_text_hint"/>

    <ImageView
        android:id="@+id/iv_search_divider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_search_icon"
        android:background="@color/co_transparent"
        android:contentDescription="@null"
        android:src="@drawable/ic_search_divider"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/co_transparent"
        android:contentDescription="@null"
        android:src="@drawable/ic_search_pressed"/>
</com.oplay.giftassistant.ui.widget.SearchLayout>