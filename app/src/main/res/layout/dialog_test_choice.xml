<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_height = "match_parent"
              android:layout_width = "match_parent"
              android:orientation = "vertical" >

	<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	              android:layout_width = "260dp"
	              android:layout_height = "wrap_content"
	              android:background = "@color/co_white"
	              android:orientation = "vertical" >

		<TextView
				android:id = "@+id/tv_title"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:paddingBottom = "@dimen/di_dialog_title_padding_top_bottom"
				android:paddingLeft = "@dimen/di_dialog_title_padding_left"
				android:paddingTop = "@dimen/di_dialog_title_padding_top_bottom"
				android:text = "重设地址"
				android:textColor = "@color/co_common_app_second_bg_green" />

		<View style = "@style/HDividerView" />

		<TextView
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:paddingTop = "@dimen/di_dialog_content_padding"
				android:paddingLeft = "@dimen/di_dialog_content_padding"
				android:paddingRight = "@dimen/di_dialog_content_padding"
				android:gravity = "bottom"
				android:singleLine = "false"
				android:textColor = "@color/co_black"
				android:text = "在下面输入框设置新的地址" />

		<EditText
				android:id = "@+id/tv_content"
				style = "@style/DefaultTextView.Text"
				android:layout_height = "50dp"
				android:layout_width = "match_parent"
				android:layout_marginRight = "@dimen/di_dialog_title_padding_left"
				android:layout_marginLeft = "@dimen/di_dialog_title_padding_left"
				android:gravity = "left|center_vertical"
				android:paddingLeft = "10dp"
				android:paddingRight = "10dp"
				android:singleLine = "false"
				android:layout_gravity = "left|top"
				android:text = "http://172.16.5.36:8290/api/\nhttp://test.giftcool.ouwan.com/" />

		<TextView
				android:id = "@+id/tv_normal"
				style = "@style/DefaultTextView.Text"
				android:singleLine = "false"
				android:gravity = "left"
				android:layout_width = "match_parent"
				android:layout_marginRight = "@dimen/di_dialog_title_padding_left"
				android:layout_marginLeft = "@dimen/di_dialog_title_padding_left"
				android:text = "正式地址:\nnet->http://lbapi.ouwan.com/api/\nweb->http://libao.ouwan.com/"
				android:background = "@color/co_gift_code_bg"
				android:layout_marginTop = "4dp"
				android:layout_marginBottom = "4dp"
				android:padding = "4dp" />

		<TextView
				android:id = "@+id/tv_test"
				style = "@style/DefaultTextView.Text"
				android:singleLine = "false"
				android:layout_width = "match_parent"
				android:gravity = "left"
				android:layout_marginRight = "@dimen/di_dialog_title_padding_left"
				android:layout_marginLeft = "@dimen/di_dialog_title_padding_left"
				android:text = "测试地址:\nnet->http://test.lbapi.ouwan.com/api/\nweb->http://test.giftcool.ouwan.com/"
				android:background = "@color/co_gift_code_bg"
				android:layout_marginTop = "4dp"
				android:layout_marginBottom = "4dp"
				android:padding = "4dp" />

		<TextView
				android:id = "@+id/tv_hint"
				style = "@style/DefaultTextView.Text"
				android:layout_width = "match_parent"
				android:gravity = "left|center_vertical"
				android:singleLine = "false"
				android:paddingTop = "5dp"
				android:paddingBottom = "@dimen/di_dialog_content_padding"
				android:paddingLeft = "@dimen/di_dialog_content_padding"
				android:paddingRight = "@dimen/di_dialog_content_padding"
				android:text = "以上点击设置正式或测试地址\n(分行: 上 net 下 web )" />

		<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:gravity = "center"
				android:orientation = "horizontal"
				android:paddingBottom = "@dimen/di_dialog_content_padding"
				android:paddingLeft = "@dimen/di_dialog_content_padding"
				android:paddingRight = "@dimen/di_dialog_content_padding"
				android:paddingTop = "0dp" >

			<TextView
					android:id = "@+id/btn_cancel"
					style = "@style/ButtonText"
					android:layout_width = "90dp"
					android:layout_marginRight = "8dp"
					android:background = "@drawable/selector_btn_grey"
					android:textColor = "@color/color_btn_grey_border"
					android:text = "@string/st_dialog_btn_cancel" />

			<TextView
					android:id = "@+id/btn_confirm"
					style = "@style/ButtonText"
					android:layout_width = "90dp"
					android:layout_marginLeft = "8dp"
					android:background = "@drawable/selector_btn_green"
					android:textColor = "@color/color_btn_green_border"
					android:text = "@string/st_dialog_btn_confirm" />
		</LinearLayout >

	</LinearLayout >
</LinearLayout >