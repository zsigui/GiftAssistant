<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:app = "http://schemas.android.com/apk/res-auto"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:orientation = "vertical" >

	<ScrollView
			android:layout_width = "match_parent"
			android:layout_height = "0dp"
			android:layout_weight = "1" >

		<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:orientation = "vertical" >

			<RelativeLayout
					style = "@style/DefaultRelativeLayout"
					android:paddingBottom = "20dp"
					android:paddingLeft = "15dp"
					android:paddingRight = "18dp"
					android:paddingTop = "15dp" >

				<com.makeramen.roundedimageview.RoundedImageView
						android:id = "@+id/iv_icon"
						android:layout_width = "@dimen/di_module_icon_diameter"
						android:layout_height = "@dimen/di_module_icon_diameter"
						android:scaleType = "centerCrop"
						android:src = "@drawable/test"
						app:riv_border_color = "@color/co_stroke_bg"
						app:riv_border_width = "1dip"
						app:riv_corner_radius = "20dp"
						app:riv_oval = "false" />


				<TextView
						android:id = "@+id/tv_name"
						style = "@style/DefaultTextView.Header"
						android:layout_width = "match_parent"
						android:layout_marginTop = "6dp"
						android:layout_marginLeft = "18dp"
						android:layout_alignParentTop = "true"
						android:layout_toRightOf = "@+id/iv_icon"
						android:drawableLeft = "@drawable/ic_limit_tag"
						android:drawablePadding = "4dp"
						android:text = "[暴打魏蜀吴]新手礼包" />

				<TextView
						android:id = "@+id/tv_consume"
						style = "@style/DefaultTextView.Text"
						android:layout_below = "@+id/tv_name"
						android:layout_marginLeft = "18dp"
						android:layout_marginRight = "5dp"
						android:layout_marginTop = "10dp"
						android:layout_toRightOf = "@+id/iv_icon"
						android:text = "@string/st_gift_consume" />

				<TextView
						android:id = "@+id/tv_score"
						style = "@style/DefaultTextView.Text"
						android:layout_alignTop = "@+id/tv_consume"
						android:layout_toRightOf = "@id/tv_consume"
						android:drawableLeft = "@drawable/ic_score"
						android:drawablePadding = "4dp"
						android:text = "2000" />

				<TextView
						android:id = "@+id/tv_or"
						style = "@style/DefaultTextView.Text"
						android:layout_alignTop = "@+id/tv_consume"
						android:layout_marginLeft = "5dp"
						android:layout_marginRight = "5dp"
						android:layout_toRightOf = "@id/tv_score"
						android:text = "@string/st_gift_or" />

				<TextView
						android:id = "@+id/tv_bean"
						style = "@style/DefaultTextView.Text"
						android:layout_alignTop = "@+id/tv_consume"
						android:layout_toRightOf = "@id/tv_or"
						android:drawableLeft = "@drawable/ic_bean"
						android:drawablePadding = "4dp"
						android:text = "10" />

				<TextView
						android:id = "@+id/tv_remain"
						style = "@style/DefaultTextView.Text"
						android:layout_below = "@+id/tv_consume"
						android:layout_marginLeft = "18dp"
						android:layout_marginTop = "7dp"
						android:layout_toRightOf = "@+id/iv_icon"
						android:text = "剩余 5个" />

				<ProgressBar
						android:id = "@+id/pb_percent"
						style = "?android:attr/progressBarStyleHorizontal"
						android:layout_width = "72dp"
						android:layout_height = "8dp"
						android:layout_alignTop = "@+id/tv_remain"
						android:layout_marginLeft = "8dp"
						android:layout_marginTop = "3dp"
						android:layout_toLeftOf = "@+id/ll_send"
						android:layout_toRightOf = "@+id/tv_remain"
						android:max = "100"
						android:visibility="gone"
						android:progressDrawable = "@drawable/shape_progress_bar_orange" />

				<TextView
						android:id = "@+id/tv_gift_code"
						style = "@style/DefaultTextView.Text"
						android:layout_height = "33dp"
						android:layout_width = "244dp"
						android:layout_marginLeft = "18dp"
						android:layout_marginRight = "5dp"
						android:layout_toRightOf = "@+id/iv_icon"
						android:layout_toLeftOf = "@+id/btn_copy"
						android:layout_alignBottom = "@+id/iv_icon"
						android:background = "@color/co_gift_code_bg"
						android:gravity = "left|center_vertical"
						android:paddingLeft = "10dp"
						android:paddingRight = "10dp"
						android:visibility="gone" />

				<TextView
						android:id = "@+id/btn_copy"
						style = "@style/DefaultTextView"
						android:layout_height = "@dimen/di_btn_height"
						android:layout_alignParentRight = "true"
						android:layout_alignTop = "@+id/tv_gift_code"
						android:layout_marginLeft = "10dp"
						android:layout_marginTop = "1dp"
						android:background = "@drawable/selector_btn_red"
						android:text = "复制"
						android:visibility="gone"
						android:textColor = "@color/co_white" />

			</RelativeLayout >

			<LinearLayout
					style = "@style/IndexModuleLayout"
					android:layout_height = "0dp"
					android:layout_marginTop = "6dp"
					android:layout_weight = "1"
					android:paddingBottom = "30dp"
					android:paddingLeft = "15dp"
					android:paddingRight = "18dp" >

				<TextView
						style = "@style/DefaultTextView.DetailTitle"
						android:text = "@string/st_gift_content" />

				<TextView
						android:id = "@+id/et_content"
						style = "@style/DefaultTextView.Detail"
						android:singleLine = "false"
						android:text = "30钻石，5000金币，武器经验卡x6，100块神魂石，10000颗迷魂珠" />

				<TextView
						style = "@style/DefaultTextView.DetailTitle"
						android:text = "@string/st_gift_deadline" />

				<TextView
						android:id = "@+id/tv_deadline"
						style = "@style/DefaultTextView.Detail"
						android:text = "2015.12.10 12:00 ~ 2016.12.10 12:00" />

				<TextView
						style = "@style/DefaultTextView.DetailTitle"
						android:text = "@string/st_gift_note" />

				<TextView
						android:id = "@+id/tv_note"
						style = "@style/DefaultTextView.Detail"
						android:singleLine = "false" />

				<TextView
						style = "@style/DefaultTextView.DetailTitle"
						android:text = "@string/st_gift_hint"
						android:textColor = "@color/co_btn_orange" />

				<TextView
						style = "@style/DefaultTextView.Detail"
						android:singleLine = "false"
						android:text = "@string/st_gift_hint_content" />

			</LinearLayout >

		</LinearLayout >
	</ScrollView >

	<com.oplay.giftassistant.ui.widget.button.GiftButton
			android:id = "@+id/btn_send"
			style = "@style/DefaultTextView"
			app:gb_isBigger="true"
			android:layout_width = "200dp"
			android:layout_height = "@dimen/di_btn_bigger_height"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:layout_gravity = "center"
			android:text = "@string/st_gift_seize"
			android:textColor = "@color/co_white" />

</LinearLayout >