<?xml version="1.0" encoding="utf-8"?>
<cn.bingoogolapple.refreshlayout.BGARefreshLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:id = "@+id/rlContent"
		android:background = "@color/co_common_bg"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent" >

	<cn.bingoogolapple.refreshlayout.BGAStickyNavLayout
			android:id = "@+id/llContainer"
			android:orientation = "vertical"
			android:background = "@color/co_transparent"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent" >

		<include
				layout = "@layout/view_banner"
				android:layout_width = "match_parent"
				android:layout_height = "@dimen/di_banner_height"
				android:layout_marginTop = "6dp"
				android:layout_marginBottom = "6dp" />


		<LinearLayout
				android:orientation = "vertical"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content" >

			<LinearLayout
					style = "@style/IndexModuleLayout"
					android:orientation = "vertical" >

				<RelativeLayout
						android:id = "@+id/rl_like_all"
						style = "@style/IndexModuleTitleLayout" >

					<TextView style="@style/DefaultTextView.Header"
							android:text = "@string/st_index_gift_like" />

					<TextView style = "@style/DefaultTextView.More" />

				</RelativeLayout >

				<View
						android:background = "@color/co_divider_bg"
						android:layout_width = "match_parent"
						android:layout_height = "1dp" />

				<android.support.v7.widget.RecyclerView
						android:id = "@+id/rv_like_content"
						style="@style/DefaultRecyclerView" />

			</LinearLayout >

			<LinearLayout
					style = "@style/IndexModuleLayout"
					android:layout_marginTop = "7dp" >

				<RelativeLayout
						android:id = "@+id/rl_limit_all"
						style = "@style/IndexModuleTitleLayout" >

					<TextView style = "@style/DefaultTextView.Header"
							android:text = "@string/st_index_gift_limit" />

					<TextView style = "@style/DefaultTextView.More" />

				</RelativeLayout >

				<View
						android:background = "@color/co_divider_bg"
						android:layout_width = "match_parent"
						android:layout_height = "1dp" />

				<android.support.v7.widget.RecyclerView
						style="@style/DefaultRecyclerView" />

			</LinearLayout >
		</LinearLayout >


		<LinearLayout
				style = "@style/IndexModuleLayout"
				android:layout_marginTop = "7dp" >

			<RelativeLayout
					android:id = "@+id/rl_new_all"
					style = "@style/IndexModuleTitleLayout" >

				<TextView style="@style/DefaultTextView.Header"
						android:text = "@string/st_index_gift_new" />

				<TextView style = "@style/DefaultTextView.More" />

			</RelativeLayout >

			<View
					android:background = "@color/co_divider_bg"
					android:layout_width = "match_parent"
					android:layout_height = "1dp" />

			<android.support.v7.widget.RecyclerView
					android:id = "@+id/rv_new_content"
					style="@style/DefaultRecyclerView"
					android:layout_height="match_parent"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"/>

		</LinearLayout >
	</cn.bingoogolapple.refreshlayout.BGAStickyNavLayout >

</cn.bingoogolapple.refreshlayout.BGARefreshLayout >