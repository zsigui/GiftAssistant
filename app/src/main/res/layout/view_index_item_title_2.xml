<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:background = "@color/co_transparent"
              style = "@style/IndexModuleLayout" >

	<View
			android:background = "@color/co_common_content_bg"
			android:layout_width = "match_parent"
			android:layout_height = "@dimen/di_index_module_gap" />

	<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	              android:id = "@+id/ll_header_item"
	              style = "@style/IndexModuleTitleLayout"
	              android:background = "@color/co_white"
	              android:orientation = "horizontal"
	              android:gravity = "center_vertical"
	              android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "â–Œ"
				android:textColor = "@color/co_common_app_main_bg" />

