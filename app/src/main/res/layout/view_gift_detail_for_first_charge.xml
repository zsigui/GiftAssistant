<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:background = "@color/co_white"
        android:layout_height = "0dp"
        android:layout_weight = "1" >

    <LinearLayout
            style = "@style/IndexModuleLayout"
            android:layout_height = "wrap_content"
            android:paddingBottom = "30dp"
            android:background = "@color/co_transparent" >

        <View
                android:background = "@color/co_common_content_bg"
                android:layout_width = "match_parent"
                android:layout_height = "6dp" />

        <TextView
                style = "@style/DefaultTextView.DetailTitle"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big"
                android:text = "@string/st_first_charge_content" />

        <TextView
                android:id = "@+id/et_content"
                style = "@style/DefaultTextView.Detail"
                android:singleLine = "false"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big" />

        <TextView
                style = "@style/DefaultTextView.DetailTitle"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big"
                android:text = "@string/st_first_charge_deadline" />

        <TextView
                android:id = "@+id/tv_deadline"
                style = "@style/DefaultTextView.Detail"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big" />

        <TextView
                style = "@style/DefaultTextView.DetailTitle"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big"
                android:text = "@string/st_first_charge_usage" />

        <com.oplay.giftcool.ui.widget.layout.GCRecyclerView
                android:id = "@+id/rv_usage"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big"
                android:layout_width = "wrap_content"
                android:layout_height = "@dimen/di_icon_diameter" />

        <TextView
                style = "@style/DefaultTextView.DetailTitle"
                android:text = "@string/st_gift_remark"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big"
                android:textColor = "@color/co_btn_orange" />

        <TextView
                android:id = "@+id/tv_remark"
                style = "@style/DefaultTextView.Detail"
                android:singleLine = "false"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big"
                android:text = "@string/st_first_charge_hint_content" />

        <TextView
                android:id = "@+id/tv_qq"
                style = "@style/DefaultTextView.Detail"
                android:singleLine = "false"
                android:paddingLeft = "@dimen/di_list_item_gap_big"
                android:paddingRight = "@dimen/di_list_item_gap_big"
                android:paddingTop = "@dimen/di_list_item_gap_normal"
                android:textColor = "@color/co_common_app_second_bg_orange"
                android:text = "@string/st_gift_qq" />

    </LinearLayout >
</ScrollView >