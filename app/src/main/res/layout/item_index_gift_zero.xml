<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		android:id = "@+id/rl_recommend"
		style = "@style/IndexListItemLayout.Horizontal"
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:app = "http://schemas.android.com/apk/res-auto" >

	<!-- 此ImageView需要自定义实现 -->
	<RelativeLayout
			android:id = "@+id/rl_icon"
			android:layout_width = "@dimen/di_icon_diameter"
			android:layout_height = "@dimen/di_icon_diameter"
			android:layout_centerHorizontal = "true"
			android:background = "@color/co_transparent" >

		<com.makeramen.roundedimageview.RoundedImageView
				android:id = "@+id/iv_icon"
				android:layout_width = "match_parent"
				android:layout_height = "match_parent"
				android:scaleType = "centerCrop"
				app:riv_border_color = "@color/co_stroke_bg"
				app:riv_border_width = "@dimen/di_icon_border_size"
				app:riv_corner_radius = "@dimen/di_icon_radius"
				app:riv_oval = "false" />

		<TextView
				android:id = "@+id/tv_price"
				style = "@style/DefaultTextView"
				android:layout_alignParentBottom = "true"
				android:layout_marginBottom = "5dp"
				android:layout_marginLeft = "@dimen/di_icon_border_size"
				android:background = "@drawable/shape_rect_icon_tap"
				android:textColor = "@color/co_white"
				android:textSize = "10sp" />
	</RelativeLayout >

	<TextView
			android:id = "@+id/tv_game_name"
			style = "@style/DefaultTextView.ItemTitle"
			android:layout_below = "@+id/rl_icon"/>

	<TextView
			android:id = "@+id/tv_name"
			style = "@style/DefaultTextView.ItemSubTitle"
			android:layout_below = "@+id/tv_game_name" />

	<TextView
			android:id = "@+id/tv_tag_seize"
			android:layout_width = "60dp"
			android:layout_height = "wrap_content"
			android:layout_centerHorizontal = "true"
			android:layout_below = "@+id/tv_name"
			android:layout_marginTop = "3dp"
			android:textColor = "@color/co_white"
			android:textSize = "12sp"
			android:layout_marginBottom = "@dimen/di_index_hoz_module_top_bottom"
			android:gravity = "center"
			android:background = "@drawable/selector_btn_zero_seize" />

</RelativeLayout >