<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:orientation = "vertical" >

	<!--<include layout = "@layout/view_toolbar_for_fullscreen" />-->

	<TextView
			android:id = "@+id/tv_type_title"
			style = "@style/DefaultTextView.FeedBack"
			android:text = "@string/st_feedback_type_title"
			android:paddingRight = "10dp"
			android:gravity = "center" />

	<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:background = "@color/co_white"
			android:padding = "12dp"
			android:orientation = "vertical" >

		<EditText
				android:id = "@+id/et_content"
				style = "@style/DefaultTextView.FeedBackContent"
				android:textCursorDrawable = "@null"
				android:imeOptions = "actionNext"
				android:hint = "@string/st_feedback_content_hint" />

		<TextView
				android:id = "@+id/tv_content_count"
				style = "@style/DefaultTextView.Text"
				android:layout_gravity = "right"
				android:textSize = "12sp"
				android:text = "0/500" />
	</LinearLayout >

	<EditText
			android:id = "@+id/et_phone"
			style = "@style/DefaultTextView.FeedBack"
			android:background = "@color/co_white"
			android:textColorHint = "@color/co_common_text_second"
			android:textColor = "@color/co_black"
			android:inputType = "number|phone"
			android:textCursorDrawable = "@null"
			android:imeOptions = "actionDone"
			android:layout_marginTop = "10dp"
			android:hint = "@string/st_feedback_phone_hint" />

	<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:gravity = "center" >

		<TextView
				android:id = "@+id/btn_send"
				style = "@style/DefaultTextView"
				android:layout_width = "200dp"
				android:layout_height = "@dimen/di_btn_bigger_height"
				android:layout_gravity = "center"
				android:layout_marginBottom = "25dp"
				android:layout_marginTop = "20dp"
				android:background = "@drawable/selector_btn_bigger_red"
				android:text = "@string/st_feedback_btn"
				android:textColor = "@color/co_white" />
	</LinearLayout >
</LinearLayout >