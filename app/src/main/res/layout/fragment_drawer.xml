<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:layout_width = "@dimen/di_drawer_width"
		android:layout_height = "match_parent"
		android:orientation = "vertical" >

	<include layout = "@layout/view_drawer_header" />

	<android.support.v7.widget.RecyclerView
			android:id = "@+id/drawer_content"
			android:scrollbars = "vertical"
			android:layout_width = "match_parent"
			android:layout_height = "0dp"
			android:layout_weight = "1"
			android:paddingTop = "10dp"
			android:background = "@color/co_white"
			android:choiceMode = "singleChoice"
			android:divider = "@null" />

	<RelativeLayout
			style = "@style/NavDrawerItemLayout"
			android:id = "@+id/drawer_footer"
			android:layout_height = "60dp"
			android:clickable = "true" >

		<ImageView
				android:id = "@+id/nav_item_icon"
				android:contentDescription = "@null"
				style = "@style/NavDrawerItemIcon"
				android:layout_marginTop = "@dimen/di_list_item_gap_normal"
				android:src = "@drawable/ic_drawer_setting" />

		<TextView
				android:id = "@+id/nav_item_text"
				style = "@style/NavDrawerItemText"
				android:layout_toRightOf = "@+id/nav_item_icon"
				android:layout_alignTop = "@+id/nav_item_icon"
				android:textSize = "@dimen/di_text_size_normal"
				android:textColor = "@color/co_common_text_main"
				android:text = "@string/st_drawer_setting" />
	</RelativeLayout >
</LinearLayout >