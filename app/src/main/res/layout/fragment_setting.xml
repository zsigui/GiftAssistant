<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "vertical"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent" >

	<!--<include layout="@layout/view_toolbar_for_fullscreen" />-->

	<RelativeLayout
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_accept_push" />

		<include
				android:id = "@+id/tb_push"
				layout = "@layout/view_toggle" />

	</RelativeLayout >

	<View style = "@style/HDividerView" />

	<RelativeLayout
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_auto_delete_package" />

		<include
				android:id = "@+id/tb_auto_delete"
				layout = "@layout/view_toggle" />

	</RelativeLayout >

	<View style = "@style/HDividerView" />

	<RelativeLayout
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_auto_focus" />

		<include
				android:id = "@+id/tb_auto_focus"
				layout = "@layout/view_toggle" />

	</RelativeLayout >

	<RelativeLayout
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:layout_marginTop = "@dimen/di_index_module_gap"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_auto_update" />

		<include
				android:id = "@+id/tb_auto_check_update"
				layout = "@layout/view_toggle" />

	</RelativeLayout >

	<View style = "@style/HDividerView" />

	<RelativeLayout
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_cur_version" />

		<TextView
				android:id = "@+id/tv_version"
				style = "@style/DefaultTextView.Text"
				android:layout_alignParentRight = "true"
				android:paddingRight = "10dp" />

	</RelativeLayout >

	<RelativeLayout
			android:id = "@+id/rl_clear"
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:background = "@drawable/selector_white_module"
			android:layout_marginTop = "@dimen/di_index_module_gap"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_auto_clear_cache" />

		<TextView
				style = "@style/DefaultTextView.Text"
				android:layout_alignParentRight = "true"
				android:paddingRight = "10dp"
				android:drawableRight="@drawable/ic_arrow_more"
				android:text = "" />

	</RelativeLayout >

	<View style = "@style/HDividerView" />

	<RelativeLayout
			android:id = "@+id/rl_feedback"
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_auto_feedback" />

		<TextView
				style = "@style/DefaultTextView.Text"
				android:layout_alignParentRight = "true"
				android:paddingRight = "10dp"
				android:drawableRight="@drawable/ic_arrow_more"
				android:text = "" />

	</RelativeLayout >

	<View style = "@style/HDividerView" />

	<RelativeLayout
			android:id = "@+id/rl_about"
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_about" />

		<TextView
				style = "@style/DefaultTextView.Text"
				android:layout_alignParentRight = "true"
				android:paddingRight = "10dp"
				android:drawableRight="@drawable/ic_arrow_more"
				android:text=""/>

	</RelativeLayout >

	<RelativeLayout
			android:id = "@+id/rl_logout"
			style = "@style/IndexModuleTitleLayout.Bigger"
			android:layout_marginTop = "@dimen/di_index_module_gap"
			android:visibility = "gone"
			android:clickable = "true" >

		<TextView
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_setting_logout" />
		<TextView
				style = "@style/DefaultTextView.Text"
				android:layout_alignParentRight = "true"
				android:paddingRight = "10dp"
				android:drawableRight="@drawable/ic_arrow_more"
				android:text = "" />

	</RelativeLayout >

</LinearLayout >