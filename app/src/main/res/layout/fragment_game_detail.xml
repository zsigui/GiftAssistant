<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
             android:layout_width = "match_parent"
             android:layout_height = "match_parent" >


	<WebView
			android:id = "@+id/wv_container"
			android:layout_above="@+id/ll_download"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent" />
	<ProgressBar
			style="?android:attr/progressBarStyleHorizontal"
			android:id="@+id/pb_percent"
			android:max="100"
			android:scrollbarStyle="insideOverlay"
			android:layout_width = "match_parent"
			android:layout_height = "2dp"
			android:visibility="gone"
			android:progressDrawable="@drawable/shape_progress_bar_orange"/>
	<LinearLayout
			android:id="@+id/ll_download"
			android:layout_alignParentBottom="true"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:gravity="center">
		<TextView
				android:id="@+id/btn_download"
				android:layout_width = "280dp"
				style="@style/DefaultTextView.BiggerBtn"
				android:background="@drawable/selector_btn_bigger_green"
				android:text="下载(145.5M)"/>
	</LinearLayout >
</RelativeLayout >
