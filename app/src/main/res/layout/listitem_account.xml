<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		android:id = "@+id/ll_header_item"
		xmlns:android = "http://schemas.android.com/apk/res/android"
		style = "@style/IndexModuleTitleLayout.Bigger.LoginInput"
		android:orientation = "horizontal" >

	<TextView
			android:id = "@+id/tv_account_list_text"
			android:layout_width = "0dp"
			android:layout_weight = "1"
			style = "@style/DefaultTextView.Login" />

	<ImageView
			android:id = "@+id/iv_account_list_delete"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:scaleType = "centerInside"
			android:layout_marginRight = "5dp"
			android:clickable = "true"
			android:src = "@drawable/ic_input_clear" />

</LinearLayout >