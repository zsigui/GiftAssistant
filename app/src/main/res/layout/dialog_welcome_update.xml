<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_height = "match_parent"
              android:layout_width = "match_parent"
              android:orientation = "vertical" >

	<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	                android:layout_width = "wrap_content"
	                android:layout_height = "wrap_content"
	                android:background = "@drawable/pic_welcome_update" >

		<TextView
				android:id = "@+id/tv_title_hint"
				style = "@style/DefaultTextView"
				android:singleLine = "true"
				android:layout_centerHorizontal = "true"
				android:layout_marginTop = "180dp"
				android:layout_width = "220dp"
				android:gravity = "left"
				android:text = "@string/st_welcome_update_title"
				android:textColor = "@color/co_btn_green" />

		<TextView
				android:id = "@+id/tv_title"
				style = "@style/DefaultTextView"
				android:singleLine = "false"
				android:layout_centerHorizontal = "true"
				android:layout_marginTop = "5dp"
				android:lineSpacingExtra = "4dp"
				android:layout_below = "@+id/tv_title_hint"
				android:layout_width = "@dimen/di_dialog_welcome_content_width"
				android:maxHeight="200dp"
				android:gravity = "left"
				android:textColor = "@color/co_common_text_main" />

		<LinearLayout
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_centerHorizontal = "true"
				android:layout_below = "@+id/tv_title"
				android:layout_marginTop = "10dp"
				android:layout_marginBottom = "15dp"
				android:gravity = "center"
				android:orientation = "horizontal" >

			<TextView
					android:id = "@+id/btn_cancel"
					style = "@style/DefaultTextView.NormalBtn"
					android:text = "@string/st_welcome_update_cancel"
					android:layout_marginRight = "20dp"
					android:background = "@drawable/selector_btn_grey"
					android:textColor = "@color/co_white" />

			<TextView
					android:id = "@+id/btn_confirm"
					style = "@style/DefaultTextView.NormalBtn"
					android:text = "@string/st_welcome_update_confirm"
					android:background = "@drawable/selector_btn_green"
					android:textColor = "@color/co_white" />
		</LinearLayout >
	</RelativeLayout >

</LinearLayout >