<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_height = "match_parent"
              android:layout_width = "match_parent"
              android:orientation = "vertical" >

	<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	                android:layout_width = "wrap_content"
	                android:layout_height = "wrap_content"
	                android:background = "@drawable/pic_welcome_update" >


		<LinearLayout
				android:id = "@+id/ll_people_hint"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginTop = "170dp"
				android:paddingBottom = "7dp"
				android:layout_centerHorizontal = "true"
				android:orientation = "horizontal" >

			<TextView
					android:id = "@+id/tv_percent"
					style = "@style/DefaultTextView"
					android:textSize = "20sp"
					android:textStyle = "bold"
					android:paddingLeft = "5dp"
					android:paddingRight = "5dp"
					android:textColor = "@color/co_common_app_main_bg" />

			<TextView
					style = "@style/DefaultTextView"
					android:singleLine = "false"
					android:layout_width = "match_parent"
					android:gravity = "left"
					android:textColor = "@color/co_common_text_main"
					android:text = "@string/st_welcome_update_people_hint" />

		</LinearLayout >

		<TextView
				android:id = "@+id/tv_title_hint"
				style = "@style/DefaultTextView"
				android:singleLine = "true"
				android:layout_centerHorizontal = "true"
				android:layout_below = "@+id/ll_people_hint"
				android:layout_width = "@dimen/di_dialog_welcome_content_width"
				android:gravity = "left"
				android:text = "@string/st_welcome_update_title"
				android:textColor = "@color/co_btn_green" />

		<ScrollView
				android:id = "@+id/sv_title"
				android:layout_below = "@+id/tv_title_hint"
				android:layout_width = "@dimen/di_dialog_welcome_content_width"
				android:layout_marginTop = "5dp"
				android:layout_centerHorizontal = "true"
				android:layout_height = "100dp" >

			<TextView
					android:id = "@+id/tv_title"
					style = "@style/DefaultTextView"
					android:singleLine = "false"
					android:lineSpacingExtra = "4dp"
					android:layout_width = "match_parent"
					android:gravity = "left"
					android:textColor = "@color/co_common_text_main" />
		</ScrollView >

		<LinearLayout
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_centerHorizontal = "true"
				android:layout_below = "@+id/sv_title"
				android:layout_marginTop = "10dp"
				android:layout_marginBottom = "15dp"
				android:gravity = "center"
				android:orientation = "horizontal" >

			<TextView
					android:id = "@+id/btn_cancel"
					style = "@style/DefaultTextView.NormalBtn"
					android:text = "@string/st_welcome_update_cancel"
					android:layout_marginRight = "20dp"
					android:background = "@drawable/selector_btn_grey"
					android:textColor = "@color/color_btn_grey_border" />

			<TextView
					android:id = "@+id/btn_confirm"
					style = "@style/DefaultTextView.NormalBtn"
					android:text = "@string/st_welcome_update_confirm"
					android:background = "@drawable/selector_btn_green"
					android:textColor = "@color/color_btn_green_border" />
		</LinearLayout >
	</RelativeLayout >

</LinearLayout >