<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/co_opacity_50"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gf_title_bar_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/gf_title_bar_height"
            android:layout_height="@dimen/gf_title_bar_height"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/ic_gf_back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:text="@string/preview"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />

        <!-- <TextView
             android:id="@+id/tv_indicator"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@android:color/white"
             android:textSize="18sp"
             android:layout_centerInParent="true"/>-->
    </RelativeLayout>


    <cn.finalteam.galleryfinal.widget.GFViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"/>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/stl_tab"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/di_tabs_common_bg_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/di_tool_bar_padding_left"
        app:stl_clickable="false"
        app:stl_customTabTextLayoutId="@layout/view_tab_circle"
        app:stl_dividerColor="@color/co_transparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="@color/co_tabs_common_bg"
        app:stl_indicatorCornerRadius="4dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="8dp"
        app:stl_underlineColor="@color/co_transparent"
        app:stl_underlineThickness="0dp"/>
</RelativeLayout>