<?xml version="1.0" encoding="utf-8"?>
<com.oplay.giftcool.ui.widget.layout.RefreshLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:id = "@+id/srl_layout"
		android:orientation = "vertical"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:background = "@color/co_transparent" >

	<com.oplay.giftcool.ui.widget.stickylistheaders.StickyListHeadersListView
			android:id = "@+id/lv_content"
			style="@style/DefaultListView"
			android:background = "@color/co_white"
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:animationCache = "false"
			android:cacheColorHint = "@null"
			android:drawSelectorOnTop = "false"
			android:fadingEdge = "none"
			android:fadingEdgeLength = "0dp"
			android:footerDividersEnabled = "false"
			android:headerDividersEnabled = "false"
			android:listSelector = "@null"
			android:scrollbarStyle = "insideOverlay"
			android:scrollingCache = "false"
			android:divider="@null"/>
</com.oplay.giftcool.ui.widget.layout.RefreshLayout >
