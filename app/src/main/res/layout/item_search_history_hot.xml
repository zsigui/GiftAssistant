<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/IndexListItemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/selector_opacity_05"
    android:paddingLeft="@dimen/di_index_hoz_module_icon_gap">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/di_icon_diameter_smaller"
        android:layout_height="@dimen/di_icon_diameter_smaller"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_img_default"
        app:riv_border_color="@color/co_stroke_bg"
        app:riv_border_width="@dimen/di_icon_border_size"
        app:riv_corner_radius="@dimen/di_icon_radius_smaller"
        app:riv_oval="false"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/DefaultTextView.Header"
        android:layout_alignTop="@+id/iv_icon"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:paddingLeft="@dimen/di_index_item_margin_left"/>

    <TextView
        android:id="@+id/tv_gift"
        style="@style/DefaultTextView.Text"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:paddingLeft="@dimen/di_index_item_margin_left"/>
</RelativeLayout>