<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/IndexListItemLayout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:paddingRight="@dimen/di_index_hoz_module_margin_left">

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/co_transparent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_icon"
            style="@style/DefaultImageView.Icon"
            android:src="@drawable/test"
            app:riv_border_color="@color/co_stroke_bg"
            app:riv_border_width="1dip"
            app:riv_corner_radius="15dp"
            app:riv_oval="false"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rl_icon"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/rl_icon"
        android:contentDescription="@null"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/DefaultTextView.Header"
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/rl_icon"
        android:layout_marginLeft="@dimen/di_index_item_margin_left"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/ll_send"
        android:layout_toRightOf="@+id/iv_limit"
        android:gravity="center_vertical"
        android:text="[暴打魏蜀吴]新手礼包"/>

    <TextView
        android:id="@+id/tv_content"
        style="@style/DefaultTextView.Text"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="@dimen/di_index_item_margin_left"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/ll_send"
        android:layout_toRightOf="@+id/rl_icon"
        android:gravity="center_vertical"
        android:text="30钻石，5000金币，武器经验卡x6，100块神魂石，10000颗迷魂珠"/>


    <TextView
        android:id="@+id/tv_score"
        style="@style/DefaultTextView.Text"
        android:layout_width="60dp"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/rl_icon"
        android:drawableLeft="@drawable/ic_score"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="100"/>

    <TextView
        android:id="@+id/tv_percent"
        style="@style/DefaultTextView.Text"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/tv_score"
        android:text="剩余100%"/>

    <ProgressBar
        android:id="@+id/pb_percent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="72dp"
        android:layout_height="8dp"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/ll_send"
        android:layout_toRightOf="@+id/tv_percent"
        android:max="100"
        android:progress="70"
        android:progressDrawable="@drawable/shape_progress_bar"/>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/di_index_hoz_module_margin_left"
        android:background="@color/co_transparent"
        android:gravity="center">

        <TextView
            android:id="@id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_orange"
            android:text="抢号"
            android:textColor="@color/co_white"/>
    </LinearLayout>
</RelativeLayout>