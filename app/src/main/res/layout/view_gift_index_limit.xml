<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:background="@color/co_transparent"
              style = "@style/IndexModuleLayout" >

	<View
			style = "@style/HDividerView"
			android:layout_height = "@dimen/di_index_module_gap" />

	<RelativeLayout
			android:id = "@+id/rl_limit_all"
			android:background = "@drawable/selector_white_module"
			style = "@style/IndexModuleTitleLayout" >

		<TextView
				android:id = "@+id/new_limit"
				style = "@style/DefaultTextView.Header"
				android:text = "â–Œ"
				android:textColor = "@color/co_common_app_main_bg" />

		<TextView
				android:id = "@+id/tv_limit"
				android:layout_toRightOf = "@+id/new_limit"
				style = "@style/DefaultTextView.Header"
				android:text = "@string/st_index_gift_limit" />

		<TextView
