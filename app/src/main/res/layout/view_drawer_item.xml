<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                style = "@style/NavDrawerItemLayout" >

	<ImageView
			android:id = "@+id/nav_item_icon"
			android:contentDescription = "@null"
			style = "@style/NavDrawerItemIcon"
			android:layout_centerVertical = "true" />

	<TextView
			android:id = "@+id/nav_item_text"
			style = "@style/NavDrawerItemText"
			android:layout_toRightOf = "@+id/nav_item_icon"
			android:layout_centerVertical = "true" />

	<TextView
			android:id = "@+id/nav_item_count"
			style = "@style/NavDrawerItemText"
			android:textColor = "@color/co_white"
			android:textSize = "12sp"
			android:layout_centerVertical = "true"
			android:layout_alignParentRight = "true"
			android:layout_marginRight = "15dp"
			android:gravity = "center"
			android:paddingLeft = "5dp"
			android:paddingRight = "5dp"
			android:visibility = "gone"
			android:background = "@drawable/shape_hint_count_red" />

	<ImageView
			android:id = "@+id/nav_item_hint"
			android:layout_width = "10dp"
			android:layout_height = "10dp"
			android:visibility = "gone"
			android:layout_centerVertical = "true"
			android:layout_alignParentRight = "true"
			android:layout_marginRight = "15dp"
			android:src = "@drawable/shape_hint_count_red" />
</RelativeLayout >