<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name = "NavDrawerHeaderLayout" >
        <item name = "android:layout_width" >match_parent</item >
        <item name = "android:layout_height" >wrap_content</item >
        <item name = "android:background" >@color/co_common_app_main_bg</item >
        <item name = "android:paddingTop" >30dp</item >
        <item name = "android:paddingBottom" >30dp</item >
        <item name = "android:paddingLeft" >20dp</item >
        <item name = "android:paddingRight" >20dp</item >
    </style >

    <style name = "NavDrawerHeaderAvatar" >
        <item name = "android:layout_width" >@dimen/di_drawer_header_icon_diameter</item >
        <item name = "android:layout_height" >@dimen/di_drawer_header_icon_diameter</item >
        <item name = "android:layout_marginRight" >@dimen/di_list_item_gap_normal</item >
        <item name = "android:scaleType" >centerCrop</item >
    </style >

    <style name = "MyItemLayout" >
        <item name = "android:layout_width" >match_parent</item >
        <item name = "android:layout_height" >@dimen/di_drawer_item_height</item >
        <item name = "android:background" >@drawable/selector_white_module</item >
        <item name = "android:paddingLeft" >@dimen/di_list_item_gap_big</item >
        <item name = "android:paddingRight" >@dimen/di_list_item_gap_big</item >
        <item name = "android:orientation" >horizontal</item >
        <item name = "android:gravity" >center_vertical</item >
    </style >

    <style name = "MyItemIcon" >
        <item name = "android:layout_width" >wrap_content</item >
        <item name = "android:layout_height" >wrap_content</item >
        <item name = "android:scaleType" >centerInside</item >
        <item name = "android:layout_marginRight" >@dimen/di_list_item_gap_s_normal</item >
        <item name = "android:contentDescription" >@null</item >
    </style >

    <style name = "MyText" >
        <item name = "android:layout_width" >0dp</item >
        <item name = "android:layout_weight" >1</item >
        <item name = "android:layout_height" >wrap_content</item >
        <item name = "android:background" >@color/co_transparent</item >
        <item name = "android:textSize" >@dimen/di_text_size_normal</item >
        <item name = "android:textColor" >@color/co_common_text_main</item >
        <item name = "android:maxLines" >1</item >
    </style >

    <style name = "MyHint" >
        <item name = "android:layout_width" >wrap_content</item >
        <item name = "android:layout_height" >wrap_content</item >
        <item name = "android:textColor" >@color/co_white</item >
        <item name = "android:textSize" >@dimen/di_text_size_small</item >
        <item name = "android:layout_marginRight" >@dimen/di_list_item_gap_normal</item >
        <item name = "android:gravity" >center</item >
        <item name = "android:paddingLeft" >@dimen/di_hint_red_padding_left_right</item >
        <item name = "android:paddingRight" >@dimen/di_hint_red_padding_left_right</item >
        <item name = "android:background" >@drawable/shape_hint_count_red</item >
        <item name = "android:visibility" >gone</item >
    </style >
</resources >