<resources>

    <!-- Base application theme. -->
    <style name = "AppTheme" parent = "Theme.AppCompat.Light" >

        <!-- for actionMode -->
        <item name = "android:actionModeBackground" >@color/common_blue_light</item >
        <item name = "actionModeBackground" >@color/common_blue_light</item >
        <!-- show actionMode above content(Toolbar) -->
        <item name = "android:windowActionModeOverlay" >true</item >
        <item name = "windowActionModeOverlay" >true</item >


        <!-- Support library compatibility -->
        <item name = "android:windowActionBar" >false</item >
        <item name = "windowActionBar" >false</item >
        <item name = "android:windowNoTitle" >true</item >
        <item name = "windowNoTitle" >true</item >
        <item name = "android:windowBackground" >@null</item >
        <item name = "android:background" >@null</item >

        <!-- actionBarSize changed in Lolipop -->
        <item name = "android:actionBarSize" >48dp</item >
        <item name = "actionBarSize" >48dp</item >

        <!--actionbar style-->
        <item name = "android:actionBarItemBackground" >@drawable/selector_common_item_transparent</item >
        <item name = "actionBarItemBackground" >@drawable/selector_common_item_transparent</item >
        <item name = "android:actionButtonStyle" >@style/ActionButton.AppTheme</item >
        <item name = "actionButtonStyle" >@style/ActionButton.AppTheme</item >

        <!-- Toolbar -->
         <item name = "toolbarStyle" >@style/ToolbarStyle</item >
        <item name = "toolbarNavigationButtonStyle" >@style/ToolbarNavigationButtonStyle</item >
        <!--<item name = "android:windowTranslucentStatus" >true</item >-->
        <!--<item name = "android:fitsSystemWindows" >true</item >-->
    </style >

    <style name = "ActionButton.AppTheme" parent = "Widget.AppCompat.Light.ActionButton" >
        <item name = "android:minWidth" >?actionBarSize</item >
        <item name = "android:paddingLeft" >0dp</item >
        <item name = "android:paddingRight" >0dp</item >
        <item name = "android:textSize" >15dp</item >
    </style >

    <style name="ToolbarStyle">
        <item name="android:background">@color/co_common_green_normal</item>
    </style>

    <style name = "ToolbarNavigationButtonStyle" parent = "Widget.AppCompat.Toolbar.Button.Navigation" >
        <item name = "android:minWidth" >?actionBarSize</item >
        <item name = "android:minHeight" >?actionBarSize</item >
        <!--<item name = "android:paddingLeft" >6dp</item >-->
        <!--<item name = "android:paddingRight" >6dp</item >-->
        <item name = "android:scaleType" >centerInside</item >
    </style >


    <style name = "CheckedTextNormal" >
        <item name = "android:layout_width" >0dp</item >
        <item name = "android:layout_height" >match_parent</item >
        <item name = "android:layout_weight" >1</item >
        <item name = "android:textSize" >12sp</item >
        <item name = "android:singleLine" >true</item >
        <item name = "android:gravity" >center</item >
        <item name = "android:layout_gravity" >center</item >
        <item name = "android:button" >@null</item >
        <item name = "android:background" >@android:color/transparent</item >
    </style >

    <style name = "CheckedTextNormal.Game" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/co_tabs_game_text_unchecked</item>
    </style >

    <style name = "CheckedTextNormal.Index" >
        <item name = "android:textColor" >@color/co_tabs_index_text_unchecked</item >
        <item name = "android:textSize" >12sp</item >
        <item name = "android:paddingTop" >7dp</item >
        <item name = "android:paddingBottom" >5dp</item >
    </style >
</resources>
