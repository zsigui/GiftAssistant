<?xml version="1.0" encoding="utf-8"?>
<resources >

	<declare-styleable name = "ViewIndicator" >
		<attr name = "triggerColor" format = "color|reference" />
		<attr name = "normalColor" format = "color" />
		<attr name = "triggerSize" format = "dimension" />
		<attr name = "normalSize" format = "dimension" />
		<attr name = "needSlipTag" format = "boolean" />
		<attr name = "slipTagColor" format = "color" />
		<attr name = "slipTagSize" format = "dimension" />
	</declare-styleable >

	<!-- the setting attributes of the Loading CircleProgress -->
	<declare-styleable name = "CircleProgress" >
		<attr name = "color1" format = "reference|color" />
		<attr name = "color2" format = "reference|color" />
		<attr name = "color3" format = "reference|color" />
	</declare-styleable >

	<declare-styleable name = "ShapeLayout" >
		<attr name = "shape_src"
		      format = "reference" />
	</declare-styleable >

	<declare-styleable name = "ToggleButton" >
		<attr name = "tb_borderWidth" format = "dimension" >
		</attr >
		<attr name = "tb_offBorderColor" format = "reference|color" >
		</attr >
		<attr name = "tb_offColor" format = "reference|color" >
		</attr >
		<attr name = "tb_onColor" format = "reference|color" >
		</attr >
		<attr name = "tb_spotColor" format = "reference|color" >
		</attr >
		<attr name = "tb_animate" format = "reference|boolean" >
		</attr >
	</declare-styleable >

	<declare-styleable name = "GiftButton" >
		<attr name = "gb_isBigger" format = "boolean" />
	</declare-styleable >

    <declare-styleable name="TagFlowLayout">
	    <attr name = "auto_select_effect" format = "boolean" />
	    <attr name = "max_select" format = "integer" />
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources >