<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		android:id = "@+id/umipay_main_content_rl"
		xmlns:android = "http://schemas.android.com/apk/res/android"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:layout_gravity = "center_horizontal">

	<LinearLayout
			android:id="@+id/umipay_reg_success_title_layout"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:gravity = "center"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="20dp"
			android:orientation = "horizontal" >

		<ImageView
				android:layout_width = "20dp"
				android:layout_height = "20dp"
				android:layout_margin = "3dp"
				android:clickable = "false"
				android:src = "@drawable/umipay_owan_logo" />

		<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:textColor = "@color/umipay_white"
				android:text="@string/umipay_reg_success_title"
				android:textSize = "16dp" />

	</LinearLayout >

	<RelativeLayout
			android:id = "@+id/umipay_reg_success_account_layout"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_below="@id/umipay_reg_success_title_layout"
			android:layout_centerHorizontal = "true" >

		<EditText
				android:id = "@+id/umipay_reg_success_account_box"
				android:layout_width = "match_parent"
				android:layout_height = "43dp"
				android:background = "@drawable/umipay_edittext_background_radius"
				android:digits = "0123456789"
				android:gravity = "center_vertical|left"
				android:maxLength = "40"
				android:paddingLeft = "35dp"
				android:singleLine = "true"
				android:textColor = "#434343"
				android:textColorHint = "#959595"
				android:textSize = "14sp"
				android:inputType="none"/>


		<ImageView
				android:layout_width = "13dp"
				android:layout_height = "13dp"
				android:layout_centerVertical = "true"
				android:layout_marginLeft = "10dp"
				android:contentDescription = "@string/umipay_account_logo"
				android:src = "@drawable/umipay_account" />
	</RelativeLayout >

	<RelativeLayout
			android:id = "@+id/umipay_reg_success_psw_layout"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/umipay_reg_success_account_layout"
			android:layout_centerHorizontal = "true"
			android:layout_marginTop = "4dp" >

		<EditText
				android:id = "@+id/umipay_reg_success_psw_box"
				android:layout_width = "match_parent"
				android:layout_height = "43dp"
				android:background = "@drawable/umipay_edittext_background_radius"
				android:gravity = "center_vertical|left"
				android:maxLength = "40"
				android:paddingLeft = "35dp"
				android:singleLine = "true"
				android:textColor = "#434343"
				android:textColorHint = "#959595"
				android:textSize = "14sp"
				android:inputType="none"/>


		<ImageView
				android:layout_width = "13dp"
				android:layout_height = "13dp"
				android:layout_centerVertical = "true"
				android:layout_marginLeft = "10dp"
				android:contentDescription = "@string/umipay_pw_logo"
				android:src = "@drawable/umipay_password" />

	</RelativeLayout >

	<TextView
			android:id = "@+id/umipay_reg_success_notify_tv"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_below = "@id/umipay_reg_success_psw_layout"
			android:layout_marginTop = "10dp"
			android:text = "@string/umipay_reg_success_notify"
			android:textColor = "#1badf6"
			android:textSize = "11sp" />

	<Button
			android:id = "@+id/umipay_reg_success_entergame_btn"
			android:layout_width = "match_parent"
			android:layout_height = "40dp"
			android:layout_marginTop="20dp"
			android:layout_below="@id/umipay_reg_success_notify_tv"
			android:background = "@drawable/umipay_btn_yellow"
			android:enabled = "true"
			android:text = "@string/umipay_reg_success_entergame"
			android:textColor = "#ffffff"
			android:textSize = "15sp" />

</RelativeLayout >