<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:layout_width = "fill_parent"
              android:layout_height = "fill_parent"
              android:background = "#bf000000"
              android:gravity = "center"
              android:orientation = "vertical" >

	<ImageView
			android:layout_width = "80dp"
			android:layout_height = "30dp"
			android:layout_margin = "20dp"
			android:src = "@drawable/umipay_logo_white" />

	<LinearLayout
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:background = "@null"
			android:gravity = "center_horizontal"
			android:orientation = "vertical" >

		<TextView
				android:id = "@+id/umipay_logininfo_username_tv"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginBottom = "10dp"
				android:layout_marginTop = "10dp"
				android:ellipsize = "marquee"
				android:focusable = "true"
				android:focusableInTouchMode = "true"
				android:gravity = "center_horizontal"
				android:marqueeRepeatLimit = "marquee_forever"
				android:textColor = "#d9d9d9"
				android:textSize = "16sp" />

		<TextView
				android:id = "@+id/umipay_logininfo_status_tv"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginBottom = "10dp"
				android:singleLine = "true"
				android:textColor = "#d9d9d9"
				android:textSize = "20sp" />
	</LinearLayout >

	<FrameLayout
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content" >

		<ImageView
				android:layout_width = "240dp"
				android:layout_height = "5dp"
				android:layout_gravity = "center_vertical"
				android:layout_marginBottom = "3dp"
				android:layout_marginTop = "3dp"
				android:background = "@drawable/umipay_loading_bg" />

		<ImageView
				android:id = "@+id/umipay_logininfo_progress"
				android:layout_width = "18dp"
				android:layout_height = "6dp"
				android:layout_gravity = "center_vertical"
				android:background = "@drawable/umipay_loading_bg" />
	</FrameLayout >

	<TextView
			android:id = "@+id/umipay_logininfo_entergame_tv"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:layout_margin = "5dp"
			android:text = "@string/umipay_logining"
			android:textColor = "#c9c9c9"
			android:textSize = "11sp" />

	<Button
			android:id = "@+id/umipay_logininfo_cancel"
			android:layout_width = "72dp"
			android:layout_height = "26dp"
			android:layout_margin = "20dp"
			android:background = "@drawable/umipay_btn_cancel_login"
			android:text = "@string/umipay_autologin_cancel"
			android:textColor = "#2bd9ff"
			android:textSize = "12sp" />

	<Button
			android:id = "@+id/umipay_logininfo_account"
			android:layout_width = "72dp"
			android:layout_height = "26dp"
			android:layout_margin = "20dp"
			android:background = "@drawable/umipay_btn_cancel_login"
			android:text = "@string/umipay_accountcenter"
			android:textColor = "#2bd9ff"
			android:textSize = "12sp" />

</LinearLayout >