<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:padding = "12dp"
                android:background = "@color/umipay_dark_state_gray" >

    <TextView
            android:id = "@+id/umipay_account_username_tv"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerVertical = "true"
            android:textSize = "16sp"
            android:singleLine = "true"
            android:maxWidth = "140dp"
            android:textColor = "@color/umipay_white" />


    <View
            android:id = "@+id/umipay_divider"
            android:layout_width = "1dp"
            android:layout_height = "18dp"
            android:layout_centerVertical = "true"
            android:layout_toRightOf = "@id/umipay_account_username_tv"
            android:background = "@color/umipay_dark_gray"
            android:layout_gravity = "center_vertical"
            android:layout_marginLeft = "8dp"
            android:layout_marginRight = "8dp" />


    <TextView
            android:id = "@+id/umipay_account_type_tv"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerVertical = "true"
            android:layout_toRightOf = "@id/umipay_divider"
            android:layout_toLeftOf = "@+id/umipay_select_account_cb"
            android:singleLine = "true"
            android:textSize = "16sp"
            android:textColor = "@color/umipay_dark_gray" />


    <CheckBox
            android:id = "@+id/umipay_select_account_cb"
            android:layout_width = "14dp"
            android:layout_height = "14dp"
            android:layout_alignParentRight = "true"
            android:layout_centerVertical = "true"
            android:layout_marginLeft = "8dp"
            android:background = "@drawable/umipay_checkbox_default"
            android:button = "@null"
            android:checked = "false"
            android:focusable = "false"
            android:clickable = "false"
            android:focusableInTouchMode = "false" />
</RelativeLayout >